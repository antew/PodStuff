<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="?android:attr/listPreferredItemHeight">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_podcast_icon"
            android:contentDescription="Podcast Title Goes Here"
            android:src="@drawable/ic_contact_picture"
            android:layout_alignParentTop="true"
            android:padding="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Startups For the Rest of Us"
            android:id="@+id/tv_podcast_title"
            android:layout_toRightOf="@id/iv_podcast_icon"
            android:layout_alignTop="@id/iv_podcast_icon"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Episode 137 | Startup Feedback, Finding Better Consulting Gigs, and More Listener Questions"
            android:id="@+id/tv_episode_title"
            android:layout_alignLeft="@id/tv_podcast_title"
            android:layout_below="@id/tv_podcast_title"
            android:singleLine="true"
            android:ellipsize="marquee"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: June 18"
            android:id="@+id/tv_episode_date"
            android:layout_alignLeft="@id/tv_episode_title"
            android:layout_below="@id/tv_episode_title"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length: 36m 12s (42MB)"
            android:id="@+id/tv_episode_length"
            android:layout_toRightOf="@id/tv_episode_date"
            android:layout_alignBaseline="@id/tv_episode_date"
            android:paddingLeft="5dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_play"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_select"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
</RelativeLayout>